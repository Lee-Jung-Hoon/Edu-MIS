   <select id="attendList" parameterType="int" resultMap="attend">
     select mNo,
      sum(CASE WHEN att_type = #{att_type} THEN 1 ELSE 0 end) as attType
     from t_attend
     group by mNo
     order by mNo
  </select>
    
    
